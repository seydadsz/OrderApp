@model OrderApp.Models.Customer

<h2>Add Customer</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label>Customer Code</label>
        <input class="form-control" asp-for="CustomerCode" />
    </div>

    <div class="form-group">
        <label>Customer Name - Surname</label>
        <input class="form-control" asp-for="CustomerName" />
    </div>

    <div class="form-group">
        <label>Email</label>
        <input class="form-control" asp-for="Email" />
    </div>

    <button type="submit" class="btn btn-success">Save</button>
    <a class="btn btn-secondary" href="/Customers/Index">Cancel</a>
</form>
