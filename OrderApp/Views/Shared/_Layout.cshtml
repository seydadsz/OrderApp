<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - OrderApp</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    <style>
        /* === Sidebar Style === */
        .sidebar {
            width: 230px;
            height: 100vh;
            background: #1e1e2d;
            position: fixed;
            top: 0;
            left: 0;
            padding-top: 30px;
            color: #fff;
        }

            .sidebar .menu-item {
                padding: 12px 20px;
                color: #c7c7d1;
                display: block;
                text-decoration: none;
                font-size: 15px;
                transition: 0.2s;
            }

                .sidebar .menu-item:hover,
                .sidebar .menu-item.active {
                    background: #2a2a3c;
                    color: #fff;
                }

                .sidebar .menu-item i {
                    margin-right: 10px;
                }

        /* === Content Area === */
        .content {
            margin-left: 230px;
            padding: 25px;
        }

        /* === Top Navbar === */
        .topbar {
            background: white;
            width: 100%;
            padding: 15px 25px;
            border-bottom: 1px solid #ddd;
            position: fixed;
            left: 230px;
            right: 0;
            top: 0;
            z-index: 100;
        }

        .content-body {
            margin-top: 80px;
        }
    </style>
</head>

<body>

    <!-- SIDEBAR -->
    <div class="sidebar">
        <h4 class="text-center mb-4">OrderApp</h4>

        <a class="menu-item @(ViewContext.RouteData.Values["controller"]!.ToString() == "Home" ? "active" : "")"
           asp-controller="Home" asp-action="Index">
            <i class="bi bi-house"></i> Home
        </a>

        <a class="menu-item @(ViewContext.RouteData.Values["controller"]!.ToString() == "Products" ? "active" : "")"
           asp-controller="Products" asp-action="Index">
            <i class="bi bi-box"></i> Products
        </a>

        <a class="menu-item @(ViewContext.RouteData.Values["controller"]!.ToString() == "Customers" ? "active" : "")"
           asp-controller="Customers" asp-action="Index">
            <i class="bi bi-people"></i> Customers
        </a>

        <a class="menu-item @(ViewContext.RouteData.Values["controller"]!.ToString() == "ProductPrices" ? "active" : "")"
           asp-controller="ProductPrices" asp-action="Index">
            <i class="bi bi-cash-coin"></i> Prices
        </a>

        <a class="menu-item @(ViewContext.RouteData.Values["controller"]!.ToString() == "Orders" ? "active" : "")"
           asp-controller="Orders" asp-action="Index">
            <i class="bi bi-receipt"></i> Orders
        </a>
    </div>

    <!-- TOP NAVBAR -->
    <div class="topbar">
        <span class="fw-bold">Dashboard</span>
    </div>

    <!-- PAGE CONTENT -->
    <div class="content">
        <div class="content-body">

            @if (TempData["Success"] != null)
            {
                <div class="alert alert-success">
                    @TempData["Success"]
                </div>
            }

            @if (TempData["Error"] != null)
            {
                <div class="alert alert-danger">
                    @TempData["Error"]
                </div>
            }

            <main role="main">
                @RenderBody()
            </main>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)

</body>
</html>
