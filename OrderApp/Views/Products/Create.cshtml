@model OrderApp.Models.Product

<h2>Add Product</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label>Stock Code</label>
        <input class="form-control" asp-for="StockCode" />
    </div>

    <div class="form-group">
        <label>Stock Name</label>
        <input class="form-control" asp-for="StockName" />
    </div>

    <button type="submit" class="btn btn-success">Save</button>
    <a class="btn btn-secondary" href="/Products/Index">Cancel</a>
</form>
