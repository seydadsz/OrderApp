@model List<OrderApp.Models.Product>

<h2 class="mt-3 mb-4">Products</h2>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success shadow-sm">@TempData["Success"]</div>
}

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger shadow-sm">@TempData["Error"]</div>
}

<div class="d-flex justify-content-between mb-3">
    <a class="btn btn-primary" asp-action="Create">
        <i class="bi bi-plus-circle"></i> Add Product
    </a>
</div>

<div class="card shadow-sm border-0">
    <div class="card-body p-0">

        <table class="table table-hover mb-0">
            <thead class="table-dark">
                <tr>
                    <th style="width:150px;">Stock Code</th>
                    <th>Product Name</th>
                    <th style="width:120px;">Actions</th>
                </tr>
            </thead>

            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            <span class="badge bg-primary">@item.StockCode</span>
                        </td>

                        <td>@item.StockName</td>

                        <td>
                            <a class="btn btn-sm btn-danger"
                               asp-action="Delete"
                               asp-route-id="@item.Id"
                               onclick="return confirm('Delete this product?');">
                                <i class="bi bi-trash"></i> Delete
                            </a>
                        </td>
                    </tr>
                }
            </tbody>

        </table>
    </div>
</div>
